@model IEnumerable<MVCApp.Models.CustomerModel>
@{
    ViewBag.Title = "Customers";
}

<h1>Customers</h1>

@{

    if (!Model.Any())
    {
        <p>No customers yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Plan</th>
                    <th>Discount Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink($"{customer.FirstName} {customer.LastName}", "Details", "Customer", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.Name</td>
                        <td>@customer.MembershipType.DiscountRate%</td>
                    </tr>
                }
            </tbody>
        </table>
}
}

