@model MVCApp.ViewModels.RandomGameViewModel
@{
    ViewBag.Title = "Customers";
}

<h1>Customers</h1>

@{
    <h3>Customer</h3>

    if(Model.Customers == null)
    {
        <p>No customers.</p>
    } 
    else
    {
        for (int i = 0; i < Model.Customers.Count; i++)
        {
            <p>@Html.ActionLink($"{Model.Customers[i].FirstName} {Model.Customers[i].LastName}", 
                                "Details", "Customer", 
                                new { id=i+1 }, null)
            </p>
        }
    }
}

